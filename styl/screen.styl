@import url('https://fonts.googleapis.com/css?family=Josefin+Sans')
@import './base16-tomorrow.dark.styl'

sansSerifFont = Helvetica, sans-serif

contentWidth = 660px
textColor = rgb(40, 50, 60)
primaryColor = white
slightlyMutedColor = rgb(240, 240, 240)
mediumMutedColor = rgb(220, 220, 220)
mutedColor = rgb(150, 150, 150)
contrastColor = rgb(30, 30, 30)
projectImageHeight = 100px
projectImageWidth = 300px

*
  border 0
  margin 0
  padding 0
  font-size 100%
  box-sizing border-box

html
  background-color primaryColor

body
  font-size 18px
  font-family sansSerifFont
  line-height 1.4
  color textColor

header
  text-align left

hr
  height 1px
  background-color slightlyMutedColor
  margin-bottom 1em

h1, h2, h3, h4, h5, h6
  font-family sansSerifFont
  color contrastColor

h1
  margin-bottom 1em

input
  padding 0.5em 1em
  display inline-block
  border-radius 2px
  &[type=email]
    border-width 1px
    border-style solid
    border-color mediumMutedColor
    width 20em

  &[type=submit]
    background-color slightlyMutedColor
    border-width 1px
    border-style solid
    border-color mediumMutedColor
    color mutedColor


a
  &:link
    color rgb(100, 150, 200)
  &:visited
    color rgb(150, 100, 200)

p
  margin-bottom 0.8em

ul,
ol
  margin-left 2em
  margin-bottom 1.5em

pre
  background-color: #1d1f21
  color: rgb(220, 220, 220)
  font-size 0.8em
  margin-bottom 0.5em
  border-radius 3px
  code
    display: block
    padding 0.8em 1.5em
    overflow-x scroll
  + p
    margin-top 1.5em

.highlighter-rouge
  + p
    margin-top 1.5em

code.highlighter-rouge,
h1 code,
h2 code,
h3 code
  background-color rgb(230, 230, 230)
  border 1px solid rgb(220, 220, 220)
  font-size 0.9em
  border-radius 2px
  padding 0 0.2em
  white-space nowrap

table,
svg
  font-family sansSerifFont
  margin-left auto
  margin-right auto
  margin-bottom 2em

svg
  display block
  max-width 100%

table
  margin-left auto
  margin-right auto
  margin-bottom 2em
  th, td
    padding 0 0.5em
  thead
    background-color rgb(240, 240, 240)
  tbody
    tr:nth-of-type(2n)
      background-color rgb(240, 240, 240)

blockquote
  border-left 0.3em solid rgb(230, 230, 230)
  padding-left 1em

strong
  font-weight 500

small
  font-size 0.85em
  font-style italic

article
  line-height 1.4
  margin-bottom 2em
  font-weight 200

  h1, h2, h3, h4, h5, h6
    margin-bottom 2em

  h1
    font-size 1.8em
    line-height 1.2
    margin-bottom 0.2em

  p
    margin-bottom 1.5em

  p + h2
    margin-top 3em

  ul
    margin-bottom 1.5em

  li
    margin-bottom 0.4em

  header
    p
      color mutedColor
      font-weight 500
      margin-bottom 2em


  .katex
    color rgb(80, 90, 100)
    font-size 0.99em


.post
  img
    display block
    max-width 100%
    margin-left auto
    margin-right auto

#wrapper
  > header
    text-align center
    background-color rgb(240, 240, 240)
    height 2.5em
    margin-bottom 40px
    padding-top 10px
    padding-bottom 10px
    h1
      display inline-block
    a
      &:link,
      &:visited
        color textColor

  .headerContent
    margin 0 auto

#wrapcontent
  margin 0 auto 50px auto
  padding 0 1em

.fullHeader
  .headerContent
    position relative
    text-align left
    padding-left 1em
    padding-right 1em
  h1
    margin-bottom 0
    a
      text-decoration none
  aside
    float right
    display inline-block

aside
  text-align center
  font-size 1.2em
  a
    display inline-block
    margin-right 0.2em
    text-decoration none
    color inherit
    span
      display none
    &:last-of-type
      margin-right 0

#description
  margin-bottom 3em
  h1
    display inline-block
    font-weight 900
    font-size 3em
    font-family "Trebuchet MS", sans-serif
    line-height 1.3
    margin-bottom 0.5em
    margin-top 0.4em
    span
      display inline-block // Avoid wrapping in mobile view

  .subtitle,
  .subSubtitle
    color rgb(120, 120, 120)

  .subtitle
    font-family sansSerifFont
    font 500 34px / 50px "Tahoma", sans-serif
    margin-bottom 0.5em

#home article
  h1
    margin-bottom 0.8em

  #mce-responses
    display inline-block

  form
    margin-bottom 2em

  label
    display none


#projects
  margin-left 0
  max-width projectImageWidth
  li
    background-position 50% 50%
    text-align center
    display inline-block
    vertical-align top
    margin 0 15px 20px 0
    height projectImageHeight
    text-indent -9999px
    width 100%
    &:nth-of-type(2n)
      margin-right 0
    a
      text-decoration none
      display block
      width 100%
      height 100%

#educatopia
  background-image url(//educatopia.org/img/favicon.png)
  border 1px solid rgb(240,240,240)
  background-repeat no-repeat
  background-size 34px, 100%
  background-position 40px 50%, 50% !important
  font-family 'Josefin Sans', sans-serif
  font-size 40px
  line-height projectImageHeight
  text-indent 40px !important
  a
    color rgb(50,50,50)


#schifferpatent
  background-image url(//schifferpatent.org/images/logo.svg), linear-gradient(rgb(60, 160, 250), rgb(30, 100, 200))
  background-repeat no-repeat, repeat-x
  background-position 50%, 50%
  background-size 90% auto, 100%

#vectual
  background-image url(../img/vectual.png)
  background-repeat no-repeat, repeat-x
  background-position 60%, 50%
  background-size 120%

#timeomat
  background-image url(../img/timeomat.png)
  background-repeat no-repeat
  background-position 0, -20px
  background-size 100%
  text-align center
  color rgb(255, 255, 255)

#bitcoinate
  background-image url(//bitcoinate.org/images/bitcoinate50.png), linear-gradient(#f7931a, #c16c07)
  background-size 28px, 100%
  background-position 40px 50%, 50%  !important
  background-repeat no-repeat
  font 900 40px / projectImageHeight "Arial", sans-serif
  text-shadow 0 -2px 1px rgba(0, 0, 0, 0.5)
  text-indent 40px !important
  a
    color white

#designection
  background-image url(../img/designection.png) , linear-gradient(rgba(150, 150, 150, 1), rgba(50, 50, 50, 1))
  background-repeat no-repeat, repeat-x
  background-size 280px, 100%
  background-position center

#leomask
  background-image linear-gradient(rgba(0, 0, 0, 0), rgba(30, 30, 30, 0.3)), url(../img/paper.jpg)
  text-align center
  text-indent 0 !important
  font 700 40px / projectImageHeight "Myriad Pro", sans-serif
  a
    color rgb(50, 50, 50)

#fakesome
  background-image url(../img/fakesome.png)
  background-color rgb(205, 92, 92)
  background-repeat no-repeat
  background-size 100%
  text-align center
  color rgb(255, 255, 255)

#shaven
  background-image url(../img/shaven.png)
  background-repeat no-repeat
  background-size 100%
  text-align center

@import './resume.styl'

@media screen and (min-width 400px)
  #projects
    margin 0 auto
    li
      width projectImageWidth
  aside
    a
      margin-right 0.5em

@media screen and (min-width contentWidth)
  #wrapper
    .headerContent
      width contentWidth

  #wrapcontent
    width contentWidth

  #projects
    max-width none

  .post
    p
      text-align justify
